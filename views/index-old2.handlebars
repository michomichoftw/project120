<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Team Chill Out | Intro HCI</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/sb-admin.css" rel="stylesheet">
    <link href="css/introHCI.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:light-grey"> Menu </a>
                    <ul class="dropdown-menu">
                            <li class="active">
                                <a href="/"><i class="fa fa-fw fa-dashboard"></i> Home</a>
                            </li>
                            <li>
                                <a href="/task"><i class="fa fa-fw fa-bar-chart-o"></i> Add a new task</a>
                            </li>
                            <li>
                                <a href="/exercises"><i class="fa fa-fw fa-table"></i> Exercises</a>
                            </li>
                            <li>
                                <a href="/analysis"><i class="fa fa-fw fa-edit"></i> Analysis</a>
                            </li>
                            <li>
                                <a href="/about"><i class="fa fa-fw fa-desktop"></i> About</a>
                            </li>

                            <li>
                                <a href="/help"><i class="fa fa-fw fa-file"></i> Help</a>
                            </li>
                            <li>
                                <a href="/signinpage"><i class="fa fa-fw fa-dashboard"></i> Sign Out</a>
                            </li>                            
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">

                    {{#each tasks}}
                    <li>
                        <a href="#">{{date}}</a>
                    </li>
                    {{/each}}



                </ul>
            </div>
            <!-- /.navbar-collapse -->
            </div>
            <!-- collapse navbar-collapse navbar-ex1-collapse-->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Your Tasks
                            <small>Display by Date</small>
                            <input class="btn btn-default" type="button"  onClick="parent.location='/task' "value="New Task" style="float: right;">
                        </h1>
                        {{#each tasks}}
                        <div class="task">
                            <h2 class="task_heading" > Name: </h2>
                            <h3 class="task_name" > {{name}}</h3>
                            <br>
                            <h2 class="task_heading" > Date: </h2>
                            <h3 class="task_date" >{{date}}</h3>
                            <br>
                            <h2 class="task_heading" style="display:inline"> Priority: </h2>
                            <h3 class="task_priority" style="display:inline">{{priority}}</3>
                            <br>
                            <h2 class="task_heading" style="display:inline"> Description: </h2> 
                            <h3 class="task_description"style="display:inline">{{description}}</h3>
                            <br><br><br>


                        </div>
                        {{/each}}
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
